<?xml version="1.0" encoding="utf-8"?>
<Patch>
    
    <!-- ========== MASHE'S ASHLANDS ========== -->
    
    <!-- Nix-Ox Chitin (Leathery → Leathery + Chitin) -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Mashed_Ashlands_NixOxChitin"]/stuffProps/categories</xpath>
        <value>
            <li>MorrowRim_Chitin</li>
        </value>
    </Operation>
    
    <!-- Shalk Chitin (Leathery → Leathery + Chitin) -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Mashed_Ashlands_ShalkChitin"]/stuffProps/categories</xpath>
        <value>
            <li>MorrowRim_Chitin</li>
        </value>
    </Operation>
    
    <!-- Kwama Chitin (Leathery → Leathery + Chitin) -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Mashed_Ashlands_KwamaChitin"]/stuffProps/categories</xpath>
        <value>
            <li>MorrowRim_Chitin</li>
        </value>
    </Operation>
    
    <!-- Strider Chitin (Stony/Woody/Metallic/BMT_ChitinStuff → Add Chitin) -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Mashed_Ashlands_StriderChitin"]/stuffProps/categories</xpath>
        <value>
            <li>MorrowRim_Chitin</li>
        </value>
    </Operation>
    
    <!-- ========== ALPHA ANIMALS ========== -->
    
    <!-- Black Chitin (Leathery → Leathery + Chitin) -->
