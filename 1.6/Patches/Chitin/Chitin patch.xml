        <xpath>/Defs/ThingDef[defName="Leather_BlackChitin"]/stuffProps</xpath>
        <value>
		<categories>
            <li>MorrowRim_Chitin</li>
		</categories>
        </value>
    </Operation>
    
    <!-- Normal Chitin (Leathery → Leathery + Chitin) -->
