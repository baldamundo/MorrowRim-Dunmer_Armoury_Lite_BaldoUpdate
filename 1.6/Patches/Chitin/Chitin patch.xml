        <xpath>/Defs/ThingDef[defName="Leather_Chitin"]/stuffProps</xpath>
        <value>
		<categories>
            <li>MorrowRim_Chitin</li>
		</categories>
        </value>
    </Operation>
    
    <!-- Iron Chitin (Leathery → Leathery + Chitin) -->
    <Operation Class="PatchOperationAdd" MayRequire="sarg.alphaanimals">
        <xpath>/Defs/ThingDef[defName="Leather_IronChitin"]/stuffProps</xpath>
